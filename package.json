{
  "name": "roblox-rpg-project",
  "version": "1.0.0",
  "description": "Un sistema RPG completo y profesional para Roblox Studio desarrollado con Rojo",
  "main": "default.project.json",
  "scripts": {
    "serve": "rojo serve",
    "build": "rojo build --output game.rbxlx",
    "sync": "rojo serve --port 34872",
    "dev": "rojo serve --port 34872 --watch",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "selene src/",
    "format": "stylua src/"
  },
  "keywords": [
    "roblox",
    "rpg",
    "game",
    "lua",
    "rojo",
    "role-playing",
    "adventure",
    "mmorpg"
  ],
