    "url": "https://github.com/tuusuario/roblox-rpg-project.git"
  },
  "bugs": {
    "url": "https://github.com/tuusuario/roblox-rpg-project/issues"
  },
  "homepage": "https://github.com/tuusuario/roblox-rpg-project#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@rojo/cli": "^7.3.0",
    "selene": "^0.25.0",
    "stylua": "^0.18.0"
  },
  "dependencies": {},
  "rojo": {
    "version": "7.3.0"
  },
  "files": [
    "src/",
